<div class="container">
  <div class="row d-flex align-items-center vh-100">
    <div class="col-7">
      <img src=" <%= @product.image_url %> " alt="" class="img-fluid mx-auto d-block image-blend">
    </div>
    <div class="col-5">
      <h1 class="mb-2 display-5 fw-bold"><%= @product.brand %></h1>
      <p class="lead">Here are your booking details.</p>
        <%= simple_form_for @booking do |f| %>
          <%= f.hidden_field :price, value:  @product.price %>
          <%= f.input :days, input_html: { type: 'number' } %>
          <%= f.submit 'Update Reservation', class: 'btn btn-dark' %>
        <% end %>
    </div>
  </div>
</div>  