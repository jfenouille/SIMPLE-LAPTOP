<div class="container">
  <div class="row align-items-center vh-100">
    <div class="col-7">
      <img src=" <%= @product.image_url %> " alt=""
        class="img-fluid mx-auto d-block image-blend w-100">
    </div>
    <div class="col-5">
      <h1 class="mb-2 display-5 fw-bold"><%= @product.brand %></h1>
      <p class="lead">Here are some of our top features.</p>
      <% specs_lines = @product.specs.lines %>
        <ul class="list-features lead list-l">
          <% specs_lines.each do |line| %>
            <li><%= line.chomp %></li>
          <% end %>
        </ul>

          <p class="lead fw-bolder my-1">
            Rs <%= @product.price %>
          </p>
        <% if @product.availability?%>
          <p class="lead text-success text-uppercase">Available</p>
          <%= link_to "Book", new_booking_path(@product), class: "btn btn-dark me-3" %>
        <% else %>
          <p class="text-danger text-uppercase font-weight-bold">Not Available</p>
        <% end %>

          <% if @product.user == current_user %>
          <%= link_to "Edit" , edit_product_path(@product), class:"btn btn-outline-dark me-3" %>
          <%= link_to "Delete", product_path(@product), data: { turbo_method: "delete", turbo_confirm: "Are you sure you want to delete this product?" }, class: "btn btn-outline-danger" %>

          <% end %>
    </div>
  </div>
</div>
